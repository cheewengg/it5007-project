{
  "name": "rebalance",
  "version": "1.0.0",
  "description": "Index Rebalance Watcher WebApp",
  "main": "index.js",
  "scripts": {
    "compile": "babel src --out-dir public",
    "watch": "babel src --out-dir public --watch --verbose",
    "test": "echo \"Error: no test specified\" && exit 1",

    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "heroku-postbuild": "npm run install-client && npm run build",
    "server": "nodemon -w server -e js,graphql server/server.js",
    "develop": "concurrently --kill-others-on-fail \"npm run server\" \"npm run start --prefix client\"",
    "start": "concurrently --kill-others-on-fail \"npm run server\" \"npm run start --prefix client\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cheewengg/rebalance.git"
  },
  "author": "gar.nky@gmail.com",
  "license": "ISC",
  "homepage": "https://github.com/cheewengg/rebalance.git",
  "dependencies": {
    "apollo-server-express": "^2.25.3",
    "express": "^4.16.4",
    "graphql": "^0.13.2",
    "mongodb": "^3.7.3",
    "nodemon": "^1.18.9"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.16.7"
  },
  "bugs": {
    "url": "https://github.com/cheewengg/rebalance.git/issues"
  }
}
